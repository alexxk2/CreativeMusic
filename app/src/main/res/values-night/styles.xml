<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MaterialComponents.BottomNavigationView.Colored" >

        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="android:background">@color/y_black</item>
        <item name="itemIconTint">@color/bottom_nav_night</item>
        <item name="itemRippleColor">@color/mtrl_navigation_bar_colored_ripple_color</item>
        <item name="itemTextAppearanceInactive">?attr/textAppearanceCaption</item>
        <item name="itemTextAppearanceActive">?attr/textAppearanceCaption</item>
        <item name="itemTextColor">@color/bottom_nav_night</item>
    </style>


    <style name="MainButtonsStyle" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_menu_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/main_menu_icon_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/sides_margin</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/main_buttons_corner_radius</item>
        <item name="layout_constraintVertical_weight">1</item>

    </style>

    <style name="MainActivityTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_menu_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SettingsActivityTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_menu_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SettingNames">
        <item name="drawableTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/sides_margin</item>
        <item name="android:layout_marginTop">@dimen/settings_margin_between_fields</item>
    </style>


    <style name="BackArrowButton">
        <item name="android:tint">@color/white</item>
        <item name="android:layout_marginStart">@dimen/settings_back_arrow_margin</item>
        <item name="android:layout_marginTop">@dimen/settings_back_arrow_margin</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/icon_arrow_back_night</item>
    </style>

    <style name="SettingsSwitch"  >
        <item name="android:thumbTint">@drawable/thumb_night</item>
    </style>

    <style name="SettingsActivity">
        <item name="android:background">@color/y_black</item>
    </style>

    <style name="SearchEditText">
        <item name="android:layout_marginHorizontal">@dimen/sides_margin</item>
        <item name="android:layout_marginTop">@dimen/search_from_title_margin</item>
        <item name="android:background">@drawable/rectangle_shape_for_search_night</item>
        <item name="android:drawableStart">@drawable/icon_search_small_night</item>
        <item name="android:drawablePadding">@dimen/drawable_padding_search</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/search</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingHorizontal">@dimen/search_edit_sides_padding</item>
        <item name="android:textColorHint">@color/y_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/y_black</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="singleLine">true</item>
    </style>

    <style name="RemoveInputButton">
        <item name="android:src">@drawable/icon_close_night</item>
    </style>

    <style name="SongNameText">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SongAlbumAndTimeText">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ArrowForward">
        <item name="android:src">@drawable/icon_arrow_forward_night</item>
    </style>

    <!--Search screen-->
    <style name="ErrorImageNotFound">
        <item name="android:layout_marginTop">@dimen/error_image_side_and_margin</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/nothing_is_found_night</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="ErrorImageOther">
        <item name="android:layout_marginTop">@dimen/error_image_side_and_margin</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/something_went_wrong_night</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ErrorTextMessage">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="UpdateRequestButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/y_black</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">@dimen/search_edit_sides_padding</item>
        <item name="android:paddingEnd">@dimen/search_edit_sides_padding</item>
    </style>

    <style name="SearchHistoryTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:text">@string/search_history_title</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/error_text_message_size</item>
    </style>

    <!--Player screen-->

    <style name="TrackNameTextStyle">
        <item name="android:layout_marginTop">@dimen/search_from_title_margin</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_menu_text_size</item>
    </style>

    <style name="TrackArtistTextStyle">
        <item name="android:layout_marginTop">@dimen/search_edit_sides_padding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/artist_name_text_size</item>
    </style>

    <style name="AddButtonStyle">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/add_button_night</item>
        <item name="android:layout_marginTop">@dimen/buttons_and_text_margin_top</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="PlayButtonStyle">
        <item name="android:clickable">false</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/play_button_night</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="PauseButtonStyle">
        <item name="android:visibility">invisible</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_pause_night</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="LikeButtonStyle">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/like_button_night</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="DislikeButtonStyle">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_dislike_night</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="TimerTextStyle">
        <item name="android:layout_marginTop">@dimen/search_edit_sides_padding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/artist_name_text_size</item>
        <item name="android:text">@string/default_timer_text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="InfoBlockNamesStyle">
        <item name="android:layout_marginStart">@dimen/sides_margin</item>
        <item name="android:layout_marginTop">@dimen/sides_margin</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/y_grey</item>
        <item name="android:textSize">@dimen/info_block_text_size</item>
    </style>

    <style name="InfoBlockValuesStyle">
        <item name="android:layout_marginStart">@dimen/sides_margin</item>
        <item name="android:layout_marginEnd">@dimen/sides_margin</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:lines">1</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/info_block_text_size</item>
    </style>

    <style name="PlayerBottomSheet">
        <item name="android:background">@drawable/bottom_sheet_background_night</item>
        <item name="android:orientation">vertical</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_peekHeight">@dimen/bottom_sheet_peek</item>
        <item name="layout_behavior">com.google.android.material.bottomsheet.BottomSheetBehavior</item>
    </style>


    <style name="PlayerDragHandler">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:src">@drawable/ic_drag_handle_night</item>
    </style>

    <!--media screen-->

    <style name="TabTextAppearanceDay">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MediaScreenTab">
        <item name="android:layout_marginHorizontal">@dimen/tab_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/tab_top_margin</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextAppearance">@style/TabTextAppearanceDay</item>
        <item name="tabTextColor">@color/white</item>
        <item name="android:backgroundTint">@color/y_black</item>
    </style>


    <style name="NoContentImage">
        <item name="android:src">@drawable/nothing_is_found_night</item>
    </style>

    <style name="NoContentMessage">
        <item name="android:layout_marginTop">@dimen/no_content_message_margin</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/no_content_message_text_size</item>
    </style>

    <style name="PlaylistInfoText">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/info_block_text_size</item>
    </style>

    <!--new playlist screen-->

    <style name="PlaylistNameEditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/new_playlist_edit_text_stroke_color_night</item>
        <item name="errorEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/y_blue</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_marginHorizontal">@dimen/sides_margin</item>
        <item name="endIconCheckable">true</item>
        <item name="endIconDrawable">@drawable/icon_close</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="PlaylistNameEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="CreateNewPlaylistButton">
        <item name="android:layout_marginHorizontal">@dimen/playlist_create_button_sides</item>

        <item name="android:layout_marginBottom">@dimen/playlist_name_margin_top</item>

        <item name="android:backgroundTint">@color/create_button_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:text">@string/create</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Components-->

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
        <item name="backgroundOverlayColorAlpha">1</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/y_black</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorPrimary">@color/y_black</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <!--Playlist screen-->

    <style name="PlaylistNameText">
        <item name="android:layout_marginStart">@dimen/sides_margin</item>
        <item name="android:layout_marginTop">@dimen/title_margin_start_new_playlist</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PlaylistDescriptionText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/y_black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PlaylistIconsStyle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="PlaylistBottomSheet">
        <item name="android:background">@drawable/bottom_sheet_background_night</item>
        <item name="android:orientation">vertical</item>
        <item name="behavior_hideable">false</item>

        <item name="layout_behavior">com.google.android.material.bottomsheet.BottomSheetBehavior</item>
    </style>

</resources>

