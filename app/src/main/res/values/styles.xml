<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_menu_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/main_menu_icon_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/sides_margin</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/main_buttons_corner_radius</item>
        <item name="layout_constraintVertical_weight">1</item>
    </style>

    <style name="MainActivityTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_menu_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SettingsActivityTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_menu_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SettingNames">

        <item name="rippleColor">@color/y_light_grey</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/sides_margin</item>
        <item name="android:layout_marginTop">@dimen/settings_margin_between_fields</item>
    </style>

    <style name="MainActivity">
        <item name="android:background">@color/y_blue</item>
    </style>

    <style name="SettingsActivity">
        <item name="android:background">@color/white</item>
    </style>

    <style name="BackArrowButton">
        <item name="android:layout_marginStart">@dimen/settings_back_arrow_margin</item>
        <item name="android:layout_marginTop">@dimen/settings_back_arrow_margin</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/icon_arrow_back</item>
    </style>

    <style name="SearchEditText">
        <item name="android:layout_marginHorizontal">@dimen/sides_margin</item>
        <item name="android:layout_marginTop">@dimen/search_from_title_margin</item>
        <item name="android:background">@drawable/rectangle_shape_for_search</item>
        <item name="android:drawableStart">@drawable/icon_search_small</item>
        <item name="android:drawablePadding">@dimen/drawable_padding_search</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/search</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingHorizontal">@dimen/search_edit_sides_padding</item>
        <item name="android:textColorHint">@color/y_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="singleLine">true</item>

    </style>

    <style name="RemoveInputButton">
        <item name="android:src">@drawable/icon_close</item>
    </style>

    <style name="SettingsSwitch">
        <item name="android:thumbTint">@drawable/thumb</item>
        <item name="android:trackTint">@drawable/track</item>
    </style>


    <style name="SongNameText">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SongAlbumAndTimeText">
        <item name="android:ellipsize">middle</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/y_grey</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ArrowForward">
        <item name="android:src">@drawable/icon_arrow_forward</item>
    </style>

    <!--Search screen-->
    <style name="ErrorImageNotFound">
        <item name="android:layout_marginTop">@dimen/error_image_side_and_margin</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:visibility">invisible</item>
        <item name="android:src">@drawable/nothing_is_found</item>
    </style>

    <style name="ErrorImageOther">
        <item name="android:layout_marginTop">@dimen/error_image_side_and_margin</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:visibility">invisible</item>
        <item name="android:src">@drawable/something_went_wrong</item>
    </style>

    <style name="ErrorTextMessage">
        <item name="android:textColor">@color/y_black</item>
    </style>

    <style name="UpdateRequestButton" parent="Widget.Material3.Button">

        <item name="android:backgroundTint">@color/y_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:padding">0dp</item>
        <item name="android:text">@string/update</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">invisible</item>
    </style>

</resources>

